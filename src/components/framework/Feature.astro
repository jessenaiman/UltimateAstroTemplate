---
interface Props {
  title: string;
  description: string;
  icon: string;
  delay?: number;
}

const { title, description, icon, delay = 0 } = Astro.props;
---

<div class="card bg-base-200/50 hover:bg-base-200/80 transition-colors duration-300 backdrop-blur-sm" style={`opacity: 0; animation: fadeIn 0.5s ease-out ${delay}ms forwards`}>
  <div class="card-body">
    <div class="flex items-start gap-4">
      <div class="text-4xl">{icon}</div>
      <div>
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="text-base-content/80">{description}</p>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

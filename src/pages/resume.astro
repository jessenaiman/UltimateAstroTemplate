---
import Layout from "../layouts/Layout.astro";
import * as resume from "./posts/resume.md";
import * as cover from "./posts/cover.md";
import { getCollection } from "astro:content";

const jobs = await getCollection("jobs");
---

<Layout title="Resume" primaryBallColor="#61DAFB" secondaryBallColor="#282c34">
  <main class="container mx-auto px-4 py-8">
    <!-- Hero Section with Cover Letter -->
    <div class="max-w-4xl mx-auto bg-white/10 backdrop-blur-sm rounded-lg shadow-xl p-8 mb-12">
      <h1 class="text-4xl font-bold mb-6 text-center text-white">{cover.frontmatter.title}</h1>
      <div class="prose prose-invert mx-auto">
        <cover.Content />
      </div>
    </div>

    <!-- Job Listings -->
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-white">Work Experience</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {jobs.map((job) => (
          <div class="bg-white/5 backdrop-blur-sm rounded-lg overflow-hidden hover:bg-white/10 transition-colors p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-semibold text-white">{job.data.title}</h3>
                <p class="text-blue-300">{job.data.employer}</p>
              </div>
              <time class="text-sm text-gray-400">{new Date(job.data.date).toLocaleDateString()}</time>
            </div>
            <div class="h-px bg-white/20 my-4" />
            <p class="text-gray-300">{job.data.description}</p>
          </div>
        ))}
      </div>
    </div>
  </main>
</Layout>

<style>
  .prose {
    max-width: 65ch;
    color: #fff;
  }
  .prose h1, .prose h2, .prose h3 {
    color: #fff;
  }
  .prose p {
    margin-bottom: 1.5em;
  }
</style>
